{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true,
    "jsx": "react",
    "module": "esnext",
    "moduleResolution": "node",
    "outDir": "./lib",
    "skipLibCheck": true,
    "strict": true,
    "target": "es2015",
    "lib": [
      "dom",
      "dom.iterable",
      "es2017",
      "esnext"
    ],
    "types": [
      "node",
      "jest"
    ]
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
